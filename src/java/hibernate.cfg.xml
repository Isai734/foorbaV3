<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/foorba</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">isai</property>
    <mapping resource="app/model/mapping/User.hbm.xml"/>
    <mapping resource="app/model/mapping/Escuela.hbm.xml"/>
    <mapping resource="app/model/mapping/Persona.hbm.xml"/>
    <mapping resource="app/model/mapping/Vivienda.hbm.xml"/>
    <mapping resource="app/model/mapping/Iglesia.hbm.xml"/>
    <mapping resource="app/model/mapping/UserRole.hbm.xml"/>
    <mapping resource="app/model/mapping/Grupo.hbm.xml"/>
    <mapping resource="app/model/mapping/Direccion.hbm.xml"/>
    <mapping resource="app/model/mapping/Servicio.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
